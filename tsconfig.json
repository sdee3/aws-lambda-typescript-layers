{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "@aws-sdk/client-s3": [
        "./layers/aws-deps/nodejs/node_modules/@aws-sdk/client-s3"
      ],
      "three": ["./layers/three/nodejs/node_modules/three"]
    },
    "resolveJsonModule": true,
    "rootDir": "./functions",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "types": ["node", "jest"]
  },
  "include": ["functions/**/*"],
  "exclude": ["functions/dist", "layers", "events", ".aws-sam", "node_modules"]
}
